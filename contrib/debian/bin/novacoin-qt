#!/bin/sh

set -e

umask 077

basedir=~/.PumpCoin
dbfile="$basedir/DB_CONFIG"
cfgfile="$basedir/PumpCoin.conf"

[ -e "$basedir" ] || mkdir "$basedir"

# PumpCoin does not clean up DB log files by default
[ -e "$dbfile" ] || echo 'set_flags DB_LOG_AUTOREMOVE' > "$dbfile"

exec /usr/lib/PumpCoin/PumpCoin-qt "$@"
